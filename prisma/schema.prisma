generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
}

model Session {
    id           String   @id @default(uuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(uuid())
    username      String    @unique
    password      String    
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    role          String    @default("nurse") // nurse, admin, etc.
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt

    sessions                Session[]
    createdPatients         Patient[]        @relation("CreatedPatients")
    assignedPatients        Patient[]        @relation("AssignedPatients")
    lastAssignedPatients    Patient[]        @relation("LastAssignedPatients")
    createdScheduledVisits  ScheduledVisit[] @relation("CreatedScheduledVisits")
    assignedScheduledVisits ScheduledVisit[] @relation("AssignedScheduledVisits")
    performedVisits         CompletedVisit[] @relation("PerformedVisits")
}

enum AssistanceType {
    ADI
    ADP
    CURE_PALLIATIVE
    DIMISSIONE_PROTETTA
    RIABILITAZIONE
    PRESTAZIONI_INFERMIERISTICHE
}

model Patient {
    id            String    @id @default(uuid())
    firstName     String
    lastName      String
    dateOfBirth   DateTime?
    fiscalCode    String?   @unique
    address       String?
    houseNumber   String? 
    city          String?
    postalCode    String?
    phone1        String
    phone2        String?
    exemptionCode String
    notes         String?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt

    createdBy        User      @relation("CreatedPatients", fields: [createdById], references: [id])
    createdById      String
    assignedTo       User?     @relation("AssignedPatients", fields: [assignedToId], references: [id])
    assignedToId     String?
    lastAssignedBy   User?     @relation("LastAssignedPatients", fields: [lastAssignedById], references: [id])
    lastAssignedById String?
    lastAssignedAt   DateTime?

    scheduledVisits ScheduledVisit[]

    @@index([lastName, firstName])
    @@index([fiscalCode])
    @@index([phone1])
}

model ScheduledVisit {
    id        String  @id @default(uuid())
    patientId String
    patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

    assistanceType AssistanceType
    nextVisitDate  DateTime
    visitFrequency Int?
    notes          String?
    isActive       Boolean        @default(true)

    assignedTo   User?   @relation("AssignedScheduledVisits", fields: [assignedToId], references: [id])
    assignedToId String?

    createdAt   DateTime @default(now())
    createdBy   User     @relation("CreatedScheduledVisits", fields: [createdById], references: [id])
    createdById String

    updatedAt DateTime @updatedAt

    completedVisits CompletedVisit[]

    @@index([patientId])
    @@index([nextVisitDate])
    @@index([assistanceType])
    @@index([assignedToId])
}

model CompletedVisit {
    id               String         @id @default(uuid())
    scheduledVisitId String
    scheduledVisit   ScheduledVisit @relation(fields: [scheduledVisitId], references: [id], onDelete: Cascade)
    patientId        String

    completedDate  DateTime
    assistanceType AssistanceType
    notes          String?

    performedBy   User   @relation("PerformedVisits", fields: [performedById], references: [id])
    performedById String

    createdAt DateTime @default(now())

    @@index([patientId])
    @@index([completedDate])
    @@index([performedById])
    @@index([scheduledVisitId])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
