// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "sqlite"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    username      String    @unique
    password      String // bcrypt hashed password
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    role          String    @default("nurse") // nurse, admin, etc.
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt

    accounts                Account[]
    sessions                Session[]
    createdPatients         Patient[]        @relation("CreatedPatients")
    assignedPatients        Patient[]        @relation("AssignedPatients")
    lastAssignedPatients    Patient[]        @relation("LastAssignedPatients")
    createdScheduledVisits  ScheduledVisit[] @relation("CreatedScheduledVisits")
    assignedScheduledVisits ScheduledVisit[] @relation("AssignedScheduledVisits")
    performedVisits         CompletedVisit[] @relation("PerformedVisits")
}

enum AssistanceType {
    ADI // Assistenza Domiciliare Integrata
    ADP // Assistenza Domiciliare Programmata
    CURE_PALLIATIVE
    DIMISSIONE_PROTETTA
    RIABILITAZIONE
    PRESTAZIONI_INFERMIERISTICHE
}

model Patient {
    id            String    @id @default(cuid())
    firstName     String
    lastName      String
    dateOfBirth   DateTime?
    fiscalCode    String?   @unique // Codice Fiscale
    address       String?
    houseNumber   String? // Numero civico
    city          String?
    postalCode    String?
    phone1        String // Telefono principale (obbligatorio)
    phone2        String? // Telefono secondario
    exemptionCode String // Codice esenzione
    notes         String?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt

    createdBy        User      @relation("CreatedPatients", fields: [createdById], references: [id])
    createdById      String
    assignedTo       User?     @relation("AssignedPatients", fields: [assignedToId], references: [id])
    assignedToId     String?
    lastAssignedBy   User?     @relation("LastAssignedPatients", fields: [lastAssignedById], references: [id])
    lastAssignedById String?
    lastAssignedAt   DateTime?

    scheduledVisits ScheduledVisit[] // Lista delle prestazioni pianificate

    @@index([lastName, firstName])
    @@index([fiscalCode])
    @@index([phone1])
}

// Prestazione pianificata per un paziente
model ScheduledVisit {
    id        String  @id @default(cuid())
    patientId String
    patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

    assistanceType AssistanceType // Tipo di prestazione/assistenza
    nextVisitDate  DateTime // Prossima data di visita per questa prestazione
    visitFrequency Int? // Cadenza in giorni (null = visita singola non ricorrente)
    notes          String? // Note specifiche per questa prestazione
    isActive       Boolean        @default(true) // Se false, la prestazione è stata sospesa

    // Infermiere assegnato a questa specifica prestazione
    assignedTo   User?   @relation("AssignedScheduledVisits", fields: [assignedToId], references: [id])
    assignedToId String?

    createdAt   DateTime @default(now())
    createdBy   User     @relation("CreatedScheduledVisits", fields: [createdById], references: [id])
    createdById String

    updatedAt DateTime @updatedAt

    completedVisits CompletedVisit[] // Storico delle visite completate

    @@index([patientId])
    @@index([nextVisitDate])
    @@index([assistanceType])
    @@index([assignedToId])
}

// Storico delle prestazioni completate
model CompletedVisit {
    id               String         @id @default(cuid())
    scheduledVisitId String
    scheduledVisit   ScheduledVisit @relation(fields: [scheduledVisitId], references: [id], onDelete: Cascade)
    patientId        String // Denormalizzato per query più veloci

    completedDate  DateTime // Data in cui è stata effettuata la prestazione
    assistanceType AssistanceType // Denormalizzato
    notes          String? // Note specifiche di questa visita completata

    performedBy   User   @relation("PerformedVisits", fields: [performedById], references: [id])
    performedById String // Infermiere che ha effettuato la prestazione

    createdAt DateTime @default(now())

    @@index([patientId])
    @@index([completedDate])
    @@index([performedById])
    @@index([scheduledVisitId])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
